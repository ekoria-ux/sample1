<% provide(:title, "パスワードを忘れた方はこちら") %>

<%= render "users/shared/logotext" %>

<%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= render "users/shared/form", f: f, resource: resource %>

  <div class="actions">
    <%= f.submit "パスワードをリセットする", class: "btn btn-dark col-3 mb-3 mx-auto" %>
  </div>
<% end %>

